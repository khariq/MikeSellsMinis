<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Mike's Garage Sale</title>
		<!-- Angular -->
		<script src="/javascripts/angular.min.js"></script>
		<script src="/javascripts/angular-ui-router.js"></script>
		
		<!-- jQuery -->
		<script src="/javascripts/jquery-2.1.3.min.js"></script>

		<!-- Bootstrap -->
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="/css/bootstrap.min.css">

		<!-- Optional theme -->
		<link rel="stylesheet" href="/css/bootstrap-theme.min.css">

		<!-- Latest compiled and minified JavaScript -->
		<script src="/js/bootstrap.min.js"></script>

		<style type="text/css">
			body { 
 			   padding-top: 65px; 
			}
		</style>

		<script src="/javascripts/angularApp.js" type="text/javascript" ></script>

		<script src="/javascripts/newOffer.js" type="text/javascript"></script>

	</head>

	<body ng-app="mikeSellsMinis">
		<div class="container" ng-controller="newOfferController">
			<div class="panel panel-primary">
				<div class="panel-heading">
					Add New Offer
				</div>
				<div class="panel-body">
					<form>
					  <div class="form-group">
					    <label for="name">Name</label>
					    <input type="text" class="form-control" id="name" ng-model="name" placeholder="Name">
					  </div>
					  <div class="form-group">
					    <label for="description">Description</label>
					    <input type="text" class="form-control" id="description" ng-model="description" placeholder="Description">
					  </div>
					  <div class="form-group">
					  	<label>Numer in Lot</label>
					  	<input type="number" class="form-control" id="numberInLot" ng-model="numberInLot" placeholder="Number in Lot" />
					  </div>
					  <div class="form-group">
					  	<label>MSRP</label>
					  	<input type="number" class="form-control" id="msrp" ng-model="msrp" placeholder="MSRP" />
					  </div>
					  <div class="form-group">
					  	<label>Asking Price</label>
					  	<input type="number" class="form-control" id="askingPrice" ng-model="askingPrice" placeholder="Asking Price" />
					  </div>
					  <div class="form-group">
		    			<label>Listing Photo</label>
		    			<input type="file" id="photo" />
		  			  </div>
					  <div class="form-group">
					  	<label>Tags</label>
					  	<div class="input-group">
					      <input type="text" class="form-control" ng-model="tag" placeholder="Tag">
					      <span class="input-group-btn">
					        <button class="btn btn-default" type="button" ng-click="newTag()" ><span class="glyphicon glyphicon-plus"></span></button>
					      </span>
					      
					    </div>
					    <div class="container">
					      	<span ng-repeat="tag in tags" class="label label-info" style="margin: 2.5px; font-size: 10px;" >{{tag}}</span>
					      </div>
					   </div>
					  <button ng-click="submit()" class="btn btn-success">Submit</button>
					</form>
				</div>
			</div>

		</div>
	</body>

</html>