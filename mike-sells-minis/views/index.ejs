<!DOCTYPE html>
<html lang="en">

	<head>
		<title>Mike's Garage Sale</title>
		<!-- Angular -->
		<script src="/javascripts/angular.min.js"></script>
		<script src="/javascripts/angular-ui-router.js"></script>
		
		<!-- jQuery -->
		<script src="/javascripts/jquery-2.1.3.min.js"></script>

		<!-- Bootstrap -->
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="/css/bootstrap.min.css">

		<!-- Optional theme -->
		<link rel="stylesheet" href="/css/bootstrap-theme.min.css">

		<!-- Latest compiled and minified JavaScript -->
		<script src="/js/bootstrap.min.js"></script>

		<style type="text/css">
			body { 
 			   padding-top: 65px; 
			}
		</style>

		<script src="/javascripts/angularApp.js" type="text/javascript" ></script>

	</head>

	<body ng-app="mikeSellsMinis">
		
		<div class="modal fade" id="reserveModal">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title">Reserve Model</h4>
					</div>
					<div class="modal-body">
						<div class="form-group">
								<input class="form-control" placeholder="Name" type="text" id="reservationName" name="reservationName" />
						</div>
						<div class="form-group">
							<input class="form-control" placeholder="Email" type="email" id="reservationEmail" name="reservationEmail" />
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-success" data-dismiss="modal">Save Reservation</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
						
					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div><!-- /.modal -->

		<div class="container" ng-controller="mikeSellsMinis_MainCtrl">
			<!-- Header -->	
		
			<nav class="navbar navbar-default navbar-fixed-top">
			  <div class="container-fluid">
			    <!-- Brand and toggle get grouped for better mobile display -->
			    <div class="navbar-header">
			      <a class="navbar-brand" href="#">Nerd Garage Sale</a>
			    </div>

			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
			        <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
			        <li><a href="#">Link</a></li>
			        <li class="dropdown">
			          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
			          <ul class="dropdown-menu" role="menu">
			            <li><a href="#">Action</a></li>
			            <li><a href="#">Another action</a></li>
			            <li><a href="#">Something else here</a></li>
			            <li class="divider"></li>
			            <li><a href="#">Separated link</a></li>
			            <li class="divider"></li>
			            <li><a href="#">One more separated link</a></li>
			          </ul>
			        </li>
			      </ul>
			      <form class="navbar-form navbar-right" role="search">
			        <div class="input-group">
  						<input type="text" class="form-control" placeholder="Search" aria-describedby="basic-addon2">
  						<span class="input-group-btn">
  							<button class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
  						</span>
					</div>

					<button class="btn btn-default">
						<span class="glyphicon glyphicon-user"></span>
						<span class="caret"></span>
					</button>

			      </form>
			      
			    </div><!-- /.navbar-collapse -->
			  </div><!-- /.container-fluid -->
			</nav>
		
			<!-- Body -->
			<div class="panel panel-primary" ng-repeat="offer in offers">
				<div class="panel-heading">
					<h4 class="panel-title">
						{{offer.title}}
					</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<!-- Images -->
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-12">
									<img ng-src="{{offer.images[0]}}" height="320" />
								</div>
							</div>
							<!-- Thumbnail Images -->
							<div class="row">
								<div class="col-sm-2">
									<img src="" alt="" />
								</div>
								<div class="col-sm-2">
									<img src="" alt="" />
								</div>
								<div class="col-sm-2">
									<img src="" alt="" />
								</div>
								<div class="col-sm-2">
									<img src="" alt="" />
								</div>
								<div class="col-sm-2">
									<img src="" alt="" />
								</div>
								<div class="col-sm-2">
									<img src="" alt="" />
								</div>
							</div>
						</div>						
						<div class="col-lg-8">
							<div class="row">
								<div class="col-md-3">Description</div>
								<div class="col-md-9">{{offer.description}}</div>
							</div>
							<div class="row">
								<div class="col-md-3">Number of Models in lot</div>
								<div class="col-md-9">{{offer.numberInLot}}</div>
							</div>
							<div class="row">
								<div class="col-md-3">MSRP</div>
								<div class="col-md-9">${{offer.msrp}}</div>
							</div>
							<div class="row">
								<div class="col-md-3">Asking Price</div>
								<div class="col-md-9">${{offer.askingPrice}}</div>
							</div>
						</div>
					</div>
					<div class="pull-right">
						<button class="btn btn-success" ng-disalbed="{{offer.reserved}}" data-toggle="modal" data-target="#reserveModal">Reserve</button>
						<button class="btn btn-danger">Ignore</button>
					</div>
				</div>
			</div>

			<!-- Footer -->
			
			<nav class="navbar navbar-default navbar-fixed-bottom">
			
			</nav>

		</div>

	</body>

</html>